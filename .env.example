# NotebookLM Kit - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Authentication Options (Choose ONE method)
# ============================================

# Option 1: Auto-Login (Recommended)
# Note: Account must NOT have 2FA enabled (or use app-specific passwords)
# Browser will open, extract auth token, and prompt for cookies manually
GOOGLE_EMAIL="your-email@gmail.com"
GOOGLE_PASSWORD="your-password"

# Option 2: Manual Credentials (Alternative to auto-login)
# Get these from NotebookLM browser DevTools:
# - Auth Token: DevTools → Console → window.WIZ_global_data.SNlM0e
# - Cookies: DevTools → Network tab → Request → Headers → Cookie value
NOTEBOOKLM_AUTH_TOKEN="ACi2F2NZSD7yrNvFMrCkP3vZJY1R:1766720233448"
NOTEBOOKLM_COOKIES="_ga=GA1.1.1949425436.1764104083; SID=g.a0005AiwX...; __Secure-1PSID=g.a0005AiwX...; SAPISID=...; ..."

# Option 3: Extract Cookies from Browser
# Opens visible browser, waits for manual login, extracts credentials
# EXTRACT_COOKIES=true
# EXTRACT_WAIT_SECONDS=10  # Optional, default: 10 seconds
# KEEP_BROWSER_OPEN=true   # Optional, keeps browser open until you press Enter

# ============================================
# Authentication Behavior
# ============================================

# Force re-authentication (ignores saved credentials.json)
# Set to true to always re-authenticate and update saved credentials
FORCE_REAUTH=false

# ============================================
# Optional: Retry Configuration
# ============================================

NOTEBOOKLM_MAX_RETRIES=1
NOTEBOOKLM_RETRY_DELAY=1000
NOTEBOOKLM_RETRY_MAX_DELAY=5000

# ============================================
# Optional: Example-specific variables
# ============================================

NOTEBOOK_ID="your-notebook-id"
ARTIFACT_ID="your-artifact-id"
OUTPUT_DIR="./downloads"
DOWNLOAD_FORMAT="pdf"
